<h2>Create a New Trip</h2>
<form action="/trips" method="POST">

  <p><label>Name</label>
  <input type="text" name="name" id="name"></input></p>

  <p><label>Trail</label></p>
  <%@trails.each do |trail|%>
      <li><input type="radio" name="trail_id" value="<%=trail.id%>" id="<%=trail.id%>"><%=trail.name%></input></li>
  <%end%>
  <br>
  <p><label>Month (Enter 1 - 12)</label>
    <input type="number" name="month" id="month" min = "1" max = "12"></input></p>

  <p><label>Day</label>
    <input type="number" name="day" id="day" min = "1" max = "31"></input></p>

  <p><label>Year (xxxx)</label>
    <input type="number" name="year" id="year" min = "1800" max = "2200"></input></p>

  <p><label>Notes</label>
  <input type="text" name="notes" id="notes"></p>

  <input type="submit" value="Create Trip" id="Create">
</form>
